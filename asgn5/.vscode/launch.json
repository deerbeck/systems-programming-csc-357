    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) mytalk server",
            "type": "cppdbg",
            "preLaunchTask": "make", // The name of the task defined above
            "request": "launch",
            "program": "${workspaceFolder}/mytalk",
            "args": [
                "-v",
                "5556"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) mytalk client",
            "type": "cppdbg",
            "preLaunchTask": "make", // The name of the task defined above
            "request": "launch",
            "program": "${workspaceFolder}/mytalk",
            "args": [
                "localhost",
                "5555"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}